@model BlogViewModel

<!-- Blog 4 -->
<section class="blog4 section-padding2">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title">Our <span>Blog</span></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @foreach (var item in Model.Blogs)
                {
                    <div class="bauen-blog4 animate-box" data-animate-effect="fadeInUp">
                        <figure><img src="@item.ImageUrl" alt="" class="img-fluid"></figure>
                        <div class="caption">
                            <h6>@item.Author</h6>
                            <h4><a href="/home/Detail/@item.Id">@item.Title</a></h4>
                            <p>@item.Content</p>
                            <hr class="border-2">
                            <div class="info-wrapper">
                                <div class="more"><a href="/home/Detail/@item.Id" class="link-btn" tabindex="0">Read more <i class="ti-arrow-right"></i></a></div>
                                <div class="date">@item.UpdatedDate?.ToString("dd MMM yyyy")</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Pagination -->
        <div class="row">
            <div class="col-md-12 text-center">
                <ul class="bauen-pagination-wrap align-center mt-90">
                    @if (Model.CurrentPage > 1)
                    {
                        <li><a href="/home/blog?page=@(Model.CurrentPage - 1)"><i class="ti-angle-left"></i></a></li>
                    }

                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li>
                            <a href="/home/blog?page=@i" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li><a href="/home/blog?page=@(Model.CurrentPage + 1)"><i class="ti-angle-right"></i></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
