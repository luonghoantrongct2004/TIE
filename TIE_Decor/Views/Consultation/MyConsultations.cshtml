@model List<TIE_Decor.Entities.Consultation>

<h2>Danh sách buổi tư vấn của bạn</h2>

@if (Model.Count == 0)
{
    <p>Bạn chưa có buổi tư vấn nào.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Thời gian</th>
                <th>Trạng thái</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consultation in Model)
            {
                <tr>
                    <td>@consultation.ScheduledTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@consultation.Status</td>
                    <td>@consultation.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}
