@model TIE_Decor.Models.DesignerProfileViewModel

<form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>

    <div>
        <label asp-for="ImageUrl"></label>
        <input type="file" asp-for="ImageUrl" accept="image/*" />
        <span asp-validation-for="ImageUrl"></span>
    </div>

    <div>
        <img src="@Model.ImageUrl" alt="Designer Image" style="max-width: 200px; max-height: 200px;" />
    </div>

    <div>
        <label asp-for="YearsOfExperience"></label>
        <input asp-for="YearsOfExperience" type="number" />
        <span asp-validation-for="YearsOfExperience"></span>
    </div>

    <div>
        <label asp-for="Expertise"></label>
        <input asp-for="Expertise" />
    </div>

    <div>
        <label asp-for="Portfolio"></label>
        <input asp-for="Portfolio" />
    </div>

    <div>
        <label asp-for="AvailableDate"></label>
        <input asp-for="AvailableDate" type="date" />
        <span asp-validation-for="AvailableDate"></span>
    </div>

    <button type="submit">Update Profile</button>
</form>
