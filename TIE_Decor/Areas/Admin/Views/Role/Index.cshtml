@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h2>Role Management</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="javascript:void(0)" onclick="editRole('@role.Id', '@role.Name')" class="btn btn-warning">Edit</a>
                    <a href="javascript:void(0)" onclick="deleteRole('@role.Id')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" onclick="showCreateRoleModal()">Create New Role</button>

<!-- Modal for creating or editing role -->
<div id="roleModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="roleId" />
                <div class="mb-3">
                    <label for="roleName" class="form-label">Role Name</label>
                    <input type="text" id="roleName" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveRole()">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showCreateRoleModal() {
        clearModal();
        $('#roleModal').modal('show');
    }

    function editRole(roleId, roleName) {
        clearModal();
        $('#roleId').val(roleId);
        $('#roleName').val(roleName);
        $('#roleModal').modal('show');
    }

    function clearModal() {
        $('#roleId').val('');
        $('#roleName').val('');
    }

    function saveRole() {
        var roleId = $('#roleId').val();
        var roleName = $('#roleName').val();

        if (!roleName) {
            alert("Role name is required");
            return;
        }

        if (roleId) {
            $.post('/Admin/Role/UpdateRole', { roleId: roleId, newRoleName: roleName })
                .done(function (response) {
                    alert("Role updated successfully");
                    location.reload();
                })
                .fail(function (xhr) {
                    alert("Error updating role: " + xhr.responseText);
                });
        } else {
            $.post('/Admin/Role/CreateRole', { roleName: roleName })
                .done(function (response) {
                    alert("Role created successfully");
                    location.reload();
                })
                .fail(function (xhr) {
                    alert("Error creating role: " + xhr.responseText);
                });
        }
    }

    function deleteRole(roleId) {
        if (!confirm('Are you sure you want to delete this role?')) {
            return;
        }

        $.post('/Admin/Role/DeleteRole', { roleId: roleId })
            .done(function (response) {
                alert("Role deleted successfully");
                location.reload();
            })
            .fail(function (xhr) {
                alert("Error deleting role: " + xhr.responseText);
            });
    }
</script>
