<script>
    $(document).ready(function () {
        $('#searchButton').click(function () {
            var searchText = $('#searchInput').val().toLowerCase();
            $('#myTable tbody tr').each(function () {
                var rowText = $(this).text().toLowerCase();
                if (rowText.indexOf(searchText) === -1) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            });
        });
    });
</script>
