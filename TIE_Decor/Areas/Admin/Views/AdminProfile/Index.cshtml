@model TIE_Decor.Areas.Admin.Models.AdminProfileViewModel
@{
    ViewData["Title"] = "Consultation Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!-- Hiển thị thông tin người dùng -->
<div class="container">
    <h3>User Profile</h3>
    <table class="table">
        <tr>
            <th>Full Name</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Profile Image</th>
            <td>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Current Image" style="max-width: 100px; max-height: 100px;" />
                }
            </td>
        </tr>
    </table>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateProfileModal">
        Change Information
    </button>
</div>

<div class="modal fade" id="updateProfileModal" tabindex="-1" aria-labelledby="updateProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateProfileModalLabel">Update Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h2>Change Information</h2>
                <form id="updateProfileForm" action="@Url.Action("UpdateProfile", "AdminProfile")" method="post" enctype="multipart/form-data">

                    <input type="hidden" asp-for="Id" value="@Model.Id" />

                    <div>
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span class="text-danger" id="fullNameError"></span>
                    </div>

                    <div>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="email" class="form-control" readonly />
                        <span class="text-danger" id="emailError"></span>
                    </div>

                    <div>
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span class="text-danger" id="passwordError"></span>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
                        <span class="text-danger" id="confirmPasswordError"></span>
                    </div>

                    <div>
                        <label asp-for="ImageUrl">Avatar</label>
                        <input asp-for="ImageUrl" name="file" type="file" class="form-control" accept="image/*" />
                        <span class="text-danger" id="imageFileError"></span>
                    </div>
                    <div>
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" type="number" class="form-control" />
                        <span class="text-danger" id="phoneError"></span>
                    </div>
                    <button type="button" id="submitProfile" class="btn btn-primary mt-3">Update Information</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#submitProfile').click(function () {
                var formData = new FormData($('#updateProfileForm')[0]);

                $.ajax({
                    url: '@Url.Action("UpdateProfile", "Profile")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            // Xóa thông báo lỗi cũ
                            $('.text-danger').empty();

                            // Cập nhật các thông báo lỗi
                            response.errors.forEach(function (error) {
                                if (error.includes("FullName")) {
                                    $('#fullNameError').text(error);
                                } else if (error.includes("Email")) {
                                    $('#emailError').text(error);
                                } else if (error.includes("Password")) {
                                    $('#passwordError').text(error);
                                } else if (error.includes("ImageUrl")) {
                                    $('#imageFileError').text(error);
                                } else if (error.includes("Phone")) {
                                    $('#phoneError').text(error);
                                }
                            });

                            // Giữ lại giá trị nhập vào nếu có lỗi
                            if (response.model) {
                                $('#FullName').val(response.model.FullName);
                                $('#Email').val(response.model.Email);
                                $('#Phone').val(response.model.Phone);
                                // Không cần giữ mật khẩu
                            }
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('An error occurred: ' + error);
                    }
                });
            });
        });

    </script>
}
